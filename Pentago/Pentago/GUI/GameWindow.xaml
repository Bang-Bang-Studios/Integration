<Window x:Class="Pentago.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Game" Height="900" Width="1440" WindowStartupLocation="CenterScreen" WindowStyle="None" ResizeMode="NoResize" Closing="Window_Closing" WindowState="Maximized" Name="Game">
    <Grid>
        <Grid.Background>
            <ImageBrush />
        </Grid.Background>
        <Grid.Resources>
            <DropShadowEffect x:Key="ShadowEffect" Color="#CEF6F5" Direction="325" Opacity="0.5" ShadowDepth="5" />

            <Style TargetType="{x:Type Button}">
                <Setter Property="Foreground" Value="Black" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <Border Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="TextElement.Foreground" Value="#A9F5F2"/>
                        <Setter Property="Effect" Value="{StaticResource ShadowEffect}" />
                    </Trigger>
                </Style.Triggers>
            </Style>
        </Grid.Resources>
        <UniformGrid Name="Board" MouseDown="Board_MouseDown" Height="500" Width="500" Margin="0" Panel.ZIndex="9999" Background="{x:Null}" MouseLeave="Board_MouseLeave" MouseMove="Board_MouseMove">
        </UniformGrid>
        <Image Height="100" Width="100" Margin="458,82,860,679" Name="btnClockWise1" Source="/Pentago;component/GUI/Images/ClockWise1.png" MouseDown="btnClockWise1_MouseDown" Visibility="Hidden" />
        <Image Height="100" Width="100" Margin="360,180,958,581" Name="btnCounterClockWise1"  Source="/Pentago;component/GUI/images/CounterClockWise1.png" MouseDown="btnCounterClockWise1_MouseDown" Visibility="Hidden" />
        <Image Height="100" Width="100" Margin="859,82,459,678" Name="btnCounterClockWise2" Source="/Pentago;component/GUI/images/CounterClockWise2.png" MouseDown="btnCounterClockWise2_MouseDown" Visibility="Hidden" />
        <Image Height="100" Width="100" Margin="960,180,358,581" Name="btnClockWise2" Source="/Pentago;component/GUI/images/ClockWise2.png" MouseDown="btnClockWise2_MouseDown" Visibility="Hidden" />
        <Image Height="100" Width="100" Margin="360,580,958,181" Name="btnClockWise3" Source="/Pentago;component/GUI/images/ClockWise3.png" MouseDown="btnClockWise3_MouseDown" Visibility="Hidden" />
        <Image Height="100" Width="100" Margin="458,679,860,82" Name="btnCounterClockWise3"  Source="/Pentago;component/GUI/Images/CounterClockWise3.png" MouseDown="btnCounterClockWise3_MouseDown" Visibility="Hidden" />
        <Image Height="100" Width="100" Margin="859,679,459,82" Name="btnClockWise4"  Source="/Pentago;component/GUI/images/ClockWise4.png" MouseDown="btnClockWise4_MouseDown" Visibility="Hidden"/>
        <Image Height="100" Width="100" Margin="960,580,358,180" Name="btnCounterClockWise4" Source="/Pentago;component/GUI/images/CounterClockWise4.png" MouseDown="btnCounterClockWise4_MouseDown" Visibility="Hidden" />
        <Rectangle Height="75" Name="ActivePlayer" Stroke="Gray" Width="75" Margin="670,75,673,710" />
        <TextBlock Height="50"  Margin="511,761,497,50" Name="winnerAnnoucement" Text="" FontWeight="Bold" FontSize="24" FontFamily="Agency FB" TextAlignment="Center" />
        <Image Margin="167,480,1074,127" Name="image1" Stretch="Fill" Source="/Pentago;component/GUI/Images/viking2.png" />
        <Image Height="105" Margin="1102,12,12,744" Name="ExitScrollImage" Stretch="Fill" Width="304" Source="/Pentago;component/GUI/Images/ExitScroll.png" />
        <Button Content="Exit" BorderThickness="0" BorderBrush="{x:Null}" Background="{x:Null}" FontFamily="Old English Text MT" FontSize="40" FontWeight="Bold" Height="64" Margin="1166,33,77,764" Name="ExitButton"  Width="175" Click="ExitButton_Click" MouseEnter="ExitButton_MouseEnter" />
        <TextBlock Height="56"  Margin="595,12,585,793" Name="ActiveTurnText" Text="Current Turn" FontFamily="Old English Text MT" FontSize="40" FontWeight="Bold"  Width="239" TextAlignment="Center" />
        <TextBlock Height="49"  Margin="140,761,0,51" Name="Player1NameText" Text="" FontFamily="Old English Text MT" FontSize="30" FontWeight="Bold" TextAlignment="Center" HorizontalAlignment="Left" Width="239" />
        <Image Margin="1052,279,25,-24" Name="IceGiant" Stretch="Uniform"  Source="/Pentago;component/GUI/Images/IceGiant.png" />
        <TextBlock Text="" Name="Player2NameText" FontFamily="Old English Text MT" FontSize="30" FontWeight="Bold" Height="49" Margin="1066,761,66,51" TextAlignment="Center" />
    </Grid>
    <Window.Background>
        <ImageBrush ImageSource="/Pentago;component/GUI/Images/MainBack.png" />
    </Window.Background>
</Window>
