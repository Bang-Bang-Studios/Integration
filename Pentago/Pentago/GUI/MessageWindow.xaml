        <Image x:Name="Pointer" HorizontalAlignment="Left" Height="68" VerticalAlignment="Top" Width="68" Source="Images/MouseArrowMod.png" Panel.ZIndex="10000" Cursor="None"/>

    </Grid>
</Window>
