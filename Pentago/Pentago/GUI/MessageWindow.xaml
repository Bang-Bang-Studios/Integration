        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Height="800" Width="1250" ResizeMode="NoResize" Topmost="True" Background="{x:Null}" Foreground="{x:Null}" HorizontalAlignment="Center" VerticalAlignment="Center" WindowStartupLocation="CenterScreen" WindowState="Maximized" MouseMove="Window_MouseMove" AllowsTransparency="True" WindowStyle="None">
    <Grid>
        <Image HorizontalAlignment="Center" Height="600" VerticalAlignment="Center" Width="425" Source="Images/RosettaStoneCartoony.png"/>
        <Button x:Name="AcceptButton" Content="OK" HorizontalAlignment="Center" Margin="714,523,461,0" VerticalAlignment="Top" Width="75" Background="{x:Null}" Foreground="#FFBBA12A" FontFamily="Old English Text MT" FontSize="24" BorderBrush="{x:Null}" BorderThickness="0" Click="AcceptButton_Click" IsDefault="True"/>
